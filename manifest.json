{
    "name": "Bye amazon chuka",
    "version": "1.0",
    "description": "Let you away from chuka goods in amazon",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
      "default_title": "Settings",
      "default_popup": "popup.html",
      "default_icon": "images/byechuka_active.png"
    },
	"permissions": [
        "tabs",
        "storage"
	]
}